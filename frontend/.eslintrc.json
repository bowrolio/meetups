{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/jsx-no-bind": "off",
      "react/prop-types": "off", // quick fix for lint errors related to react prop types,
      "react/jsx-no-constructed-context-values": "off",
      "no-restricted-syntax": "off",
      "guard-for-in": "off"
    }
}
